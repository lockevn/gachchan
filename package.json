{
  "name": "gachchan",
  "version": "8.0.0",
  "description": "Shared lib (work in node and browser) for common functionalities",
  "releasenote": "Change to TypeScript from v6. Use Parcel to build.",
  "author": "lockevn",
  "license": "GPL-3.0-only",
  "keywords": [
    "nodejs",
    "browser",
    "lib",
    "utils",
    "common",
    "javascript",
    "typescript",
    "tested",
    "shared-library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gurucore/gachchan.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/gachchan.umd.cjs",
  "module": "./dist/gachchan.es.mjs",
  "exports": {
    ".": {
      "require": "./dist/gachchan.umd.cjs",
      "import": "./dist/gachchan.es.mjs"
    }
  },
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "parcel watch",
    "prebuild": "rimraf dist",
    "lint": "eslint . --fix",
    "check": "tsc --noEmit --skipLibCheck",
    "build": "parcel build",
    "test": "vitest",
    "test:run": "vitest run",
    "empty1": "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - ",
    "precommit": "npm run lint && npm run check",
    "ci": "npm run check && npm run test:run",
    "release": "npm run check && npm run build"
  },
  "dependencies": {
    "nanoid": "^5.1.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.4",
    "@parcel/bundler-library": "latest",
    "@parcel/config-default": "latest",
    "@parcel/packager-ts": "latest",
    "@parcel/transformer-typescript-tsc": "latest",
    "@parcel/transformer-typescript-types": "latest",
    "@types/node": "latest",
    "eslint": "latest",
    "parcel": "latest",
    "rimraf": "latest",
    "typescript": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "axios": ">0.21.0",
    "decimal.js": "^10.2.1",
    "lodash": "^4.17.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "stackblitz": {
    "startCommand": "pnpm test:run"
  }
}
